---
import type { Locale } from '~/types';
import { getLocalizedText, seoMeta, getLocaleFromUrl } from '~/utils/i18n';
import '~/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  locale?: Locale;
  canonicalUrl?: string;
}

// Get locale from URL if not provided
const currentLocale = Astro.props.locale || getLocaleFromUrl(Astro.url);

// Build meta information
const pageTitle = Astro.props.title || getLocalizedText(seoMeta.title, currentLocale);
const pageDescription = Astro.props.description || getLocalizedText(seoMeta.description, currentLocale);
const pageKeywords = Astro.props.keywords || getLocalizedText(seoMeta.keywords, currentLocale);
const ogImage = Astro.props.ogImage || '/assets/og-image.png';

// Build canonical URL
const baseUrl = Astro.site ? Astro.site.toString().slice(0, -1) : '';
const canonicalUrl = Astro.props.canonicalUrl || `${baseUrl}${Astro.url.pathname}`;

// Generate alternate links for other languages
const alternateLinks = ['ja', 'en'].map(locale => {
  const href = locale === 'ja' 
    ? `${baseUrl}/` 
    : `${baseUrl}/${locale}/`;
  return { locale, href };
});
---

<!DOCTYPE html>
<html lang={currentLocale} dir="ltr">
  <head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="SuperSheet Team" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={`${baseUrl}${ogImage}`} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="SuperSheet" />
    <meta property="og:locale" content={currentLocale === 'ja' ? 'ja_JP' : 'en_US'} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={`${baseUrl}${ogImage}`} />
    
    <!-- Alternate Language Links -->
    {alternateLinks.map(({ locale, href }) => (
      <link 
        rel="alternate" 
        hreflang={locale === 'ja' ? 'ja' : 'en'} 
        href={href} 
      />
    ))}
    <link rel="alternate" hreflang="x-default" href={`${baseUrl}/`} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Preload Critical Resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Fonts -->
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;600;700&display=swap" 
      rel="stylesheet" 
    />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#6366f1" />
    
    <!-- Accessibility: Skip to content -->
    <style>
      /* Ensure skip link is visible when focused */
      .skip-link:focus {
        position: absolute !important;
        top: 0 !important;
        left: 0 !important;
        z-index: 9999 !important;
        padding: 8px 16px !important;
        background: #6366f1 !important;
        color: white !important;
        text-decoration: none !important;
        border-radius: 0 0 4px 0 !important;
        transform: translateY(0) !important;
      }
    </style>
  </head>
  
  <body class="antialiased">
    <!-- Skip to main content link for screen readers -->
    <a 
      href="#main-content" 
      class="skip-link"
      aria-label={currentLocale === 'ja' ? 'メインコンテンツへスキップ' : 'Skip to main content'}
    >
      {currentLocale === 'ja' ? 'メインコンテンツへスキップ' : 'Skip to main content'}
    </a>
    
    <!-- Page Content -->
    <div class="min-h-screen flex flex-col">
      <slot />
    </div>
    
    <!-- Scripts -->
    <script>
      // Enhanced focus management for accessibility
      document.addEventListener('DOMContentLoaded', () => {
        // Add focus-visible polyfill behavior
        const handleKeyDown = (e: KeyboardEvent) => {
          if (e.key === 'Tab') {
            document.body.classList.add('using-keyboard');
          }
        };
        
        const handleMouseDown = () => {
          document.body.classList.remove('using-keyboard');
        };
        
        document.addEventListener('keydown', handleKeyDown);
        document.addEventListener('mousedown', handleMouseDown);
        
        // Animate elements on scroll (respecting prefers-reduced-motion)
        const observerOptions: IntersectionObserverInit = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);
        
        // Observe elements with animation class
        document.querySelectorAll('.animate-on-scroll').forEach((el) => {
          observer.observe(el);
        });
        
        // Smooth scrolling for anchor links (respecting preferences)
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
          anchor.addEventListener('click', (e) => {
            e.preventDefault();
            const anchorElement = anchor as HTMLAnchorElement;
            const target = document.querySelector(anchorElement.getAttribute('href') || '');
            
            if (target) {
              const reducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
              
              target.scrollIntoView({
                behavior: reducedMotion ? 'auto' : 'smooth',
                block: 'start'
              });
              
              // Focus the target for accessibility
              if (target.setAttribute) {
                target.setAttribute('tabindex', '-1');
                (target as HTMLElement).focus();
              }
            }
          });
        });
      });
    </script>
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "SuperSheet",
        "description": {pageDescription},
        "url": {canonicalUrl},
        "applicationCategory": "Spreadsheet Software",
        "operatingSystem": "Cross-platform",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD",
          "availability": "https://schema.org/InStock"
        },
        "author": {
          "@type": "Organization",
          "name": "SuperSheet Team"
        }
      }
    </script>
  </body>
</html>