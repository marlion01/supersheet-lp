---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/Header.astro';
import PricingSection from '~/components/Pricing.astro';
import Footer from '~/components/Footer.astro';
import type { Locale } from '~/types';
import { seoMeta, getLocalizedText, pricingContent } from '~/utils/i18n';

const locale: Locale = 'zh';

// SEO Meta for Chinese pricing page
const pageTitle = `${getLocalizedText(pricingContent.title, locale)} - ${getLocalizedText(seoMeta.title, locale)}`;
const pageDescription = getLocalizedText(pricingContent.subtitle, locale);
const pageKeywords = `定价, 价格, 方案, ${getLocalizedText(seoMeta.keywords, locale)}`;

// Canonical URL for Chinese pricing page
const canonicalUrl = Astro.site ? `${Astro.site}zh/pricing/` : 'https://supersheet-team.github.io/lp/zh/pricing/';
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  locale={locale}
  canonicalUrl={canonicalUrl}
>
  <!-- Header -->
  <Header locale={locale} />
  
  <!-- Main Content -->
  <main id="main-content">
    <!-- Pricing Section -->
    <PricingSection locale={locale} />
  </main>
  
  <!-- Footer -->
  <Footer locale={locale} />
</Layout>

