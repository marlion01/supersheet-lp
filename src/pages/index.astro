---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/Header.astro';
import Hero from '~/components/Hero.astro';
import Features from '~/components/Features.astro';
import Footer from '~/components/Footer.astro';
import type { Locale } from '~/types';
import { seoMeta, getLocalizedText } from '~/utils/i18n';

const locale: Locale = 'ja';

// SEO Meta for Japanese page
const pageTitle = getLocalizedText(seoMeta.title, locale);
const pageDescription = getLocalizedText(seoMeta.description, locale);
const pageKeywords = getLocalizedText(seoMeta.keywords, locale);

// Canonical URL for Japanese page
const canonicalUrl = Astro.site ? `${Astro.site}` : 'https://supersheet-team.github.io/lp/';
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  locale={locale}
  canonicalUrl={canonicalUrl}
>
  <!-- Skip to main content is already in Layout.astro -->
  
  <!-- Header -->
  <Header locale={locale} />
  
  <!-- Main Content -->
  <main id="main-content">
    <!-- Hero Section -->
    <Hero locale={locale} />
    
    <!-- Features Section -->
    <Features locale={locale} />
  </main>
  
  <!-- Footer -->
  <Footer locale={locale} />
</Layout>

